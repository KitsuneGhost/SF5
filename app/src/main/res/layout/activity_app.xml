<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppActivity">

    <View
        android:id="@+id/bottom_menu_outline"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@drawable/gray_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="409dp"
        android:layout_height="659dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <LinearLayout
        android:layout_width="360sp"
        android:layout_height="70sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottom_menu_outline"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu_outline">

        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gray_outline"
            android:contentDescription="@string/profile"
            app:srcCompat="@drawable/user_red" />

        <ImageButton
            android:id="@+id/shopping_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gray_outline"
            android:contentDescription="@string/shopping"
            app:srcCompat="@drawable/shopping_cart" />

        <ImageButton
            android:id="@+id/quests_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gray_outline"
            android:contentDescription="@string/quests"
            app:srcCompat="@drawable/bookmark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
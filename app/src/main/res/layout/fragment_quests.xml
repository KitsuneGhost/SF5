<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuestsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/tasks_light_view"
            android:layout_width="375sp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/light_gray_outline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tasks_view"
            android:layout_width="340sp"
            android:layout_height="40sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gray_outline"
            app:layout_constraintEnd_toEndOf="@+id/tasks_light_view"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/tasks_light_view"
            app:layout_constraintTop_toTopOf="@+id/tasks_light_view" />

        <View
            android:id="@+id/tasks_view2"
            android:layout_width="340sp"
            android:layout_height="210sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gray_outline"
            app:layout_constraintEnd_toEndOf="@+id/tasks_light_view"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="@+id/tasks_light_view"
            app:layout_constraintTop_toBottomOf="@+id/tasks_view" />

        <TextView
            android:id="@+id/Tasks_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tasks"
            android:textAlignment="center"
            android:textColor="@color/ui_gray"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tasks_view"
            app:layout_constraintEnd_toEndOf="@+id/tasks_view"
            app:layout_constraintStart_toStartOf="@+id/tasks_view"
            app:layout_constraintTop_toTopOf="@+id/tasks_view" />

        <TextView
            android:id="@+id/tasks_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Здесь будут задания"
            android:textAlignment="center"
            android:textColor="@color/ui_gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tasks_view2"
            app:layout_constraintStart_toStartOf="@+id/tasks_view2"
            app:layout_constraintTop_toTopOf="@+id/tasks_view2" />

        <Button
            android:id="@+id/info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/red_outline"
            android:text="@string/info"
            app:layout_constraintEnd_toEndOf="@+id/tasks_view2"
            app:layout_constraintStart_toStartOf="@+id/tasks_view2"
            app:layout_constraintTop_toBottomOf="@+id/challenge_outline" />

        <View
            android:id="@+id/view4"
            android:layout_width="340sp"
            android:layout_height="40sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gray_outline"
            app:layout_constraintEnd_toEndOf="@+id/tasks_light_view"
            app:layout_constraintStart_toStartOf="@+id/tasks_light_view"
            app:layout_constraintTop_toBottomOf="@+id/tasks_view2" />

        <View
            android:id="@+id/challenge_outline"
            android:layout_width="340sp"
            android:layout_height="210sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gray_outline"
            app:layout_constraintEnd_toEndOf="@+id/tasks_light_view"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="@+id/tasks_light_view"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <TextView
            android:id="@+id/challenge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Челлендж"
            android:textAlignment="center"
            android:textColor="@color/ui_gray"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4" />

        <TextView
            android:id="@+id/challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Здесь будет Челлендж"
            android:textColor="@color/ui_gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/challenge_outline"
            app:layout_constraintStart_toStartOf="@+id/challenge_outline"
            app:layout_constraintTop_toTopOf="@+id/challenge_outline" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>